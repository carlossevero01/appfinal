<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutnotas"
    android:orientation="vertical"
    tools:context=".notas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_gravity="right"
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </FrameLayout>
        <TextView
            android:id="@+id/notasbemvindo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Bem vindo "
            android:textSize="20dp"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Notas"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Para editar uma nota, insira o texto na nova anotação e clique na anotação a ser substituída."
            android:textSize="15dp"
            />
        <EditText
            android:id="@+id/adcanot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nova anotação"
            />
        <Button
            android:id="@+id/btnAdicionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar"
            android:layout_gravity="right"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="1339dp" />



    </LinearLayout>
</ScrollView>

